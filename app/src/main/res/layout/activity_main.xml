<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextToast"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Give Me Toast"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="34dp"
    />
    <Button
            android:text="Get Toast"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/toastBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="displayToast" android:layout_marginTop="262dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextToast" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="342dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>